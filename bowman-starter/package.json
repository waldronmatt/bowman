{
  "name": "bowman",
  "version": "1.3.5",
  "description": "A simple static site generator powered by Node.js, Webpack, and Browsersync",
  "main": "src/index.js",
  "scripts": {
    "dev": "run-s webpack-prebuild-dev webpack-dev render-page-dev browsersync",
    "build": "run-s webpack-prebuild-prod webpack-prod render-page-prod",
    "rebuild": "run-s webpack-prebuild-dev webpack-dev render-page-dev",
    "webpack-prebuild-dev": "webpack --config ./scripts/webpack/env/webpack.dev.prebuild.js",
    "webpack-prebuild-prod": "webpack --config  ./scripts/webpack/env/webpack.prod.prebuild.js",
    "webpack-dev": "webpack --config ./scripts/webpack/env/webpack.dev.js",
    "webpack-prod": "webpack --config ./scripts/webpack/env/webpack.prod.js",
    "render-page-dev": "node ./scripts/render/page.dev.js",
    "render-page-prod": "node ./scripts/render/page.prod.js",
    "browsersync": "node ./scripts/browsersync"
  },
  "keywords": [
    "bowman",
    "static site generator",
    "nodejs",
    "webpack",
    "browsersync"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "defaults",
    "not ie < 11",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ],
  "sideEffects": [
    "./src/static/js/_load-apps.js",
    "./src/static/js/_polyfills.js",
    "./src/static/js/layouts/utils/_copyright-year.js",
    "./src/static/js/layouts/_footer.js"
  ],
  "author": "Matthew Waldron",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@node-minify/core": "^5.3.0",
    "@node-minify/html-minifier": "^5.3.0",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.3",
    "ejs": "^3.1.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "front-matter": "^3.1.0",
    "fs-extra": "^9.0.0",
    "hard-source-webpack-plugin": "^0.13.1",
    "imagemin-webp-webpack-plugin": "^3.3.2",
    "imagemin-webpack-plugin": "^2.4.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.0",
    "npm": "^6.14.5",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "2.1.2",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.4.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.17.2",
    "stylelint-webpack-plugin": "^2.0.0",
    "stylint": "^2.0.0",
    "terser-webpack-plugin": "^3.0.0",
    "webpack": "^4.43.0",
    "webpack-clean": "^1.2.5",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-fix-style-only-entries": "^0.4.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-livereload-plugin": "^2.3.0",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "regenerator-runtime": "^0.13.7",
    "sanitize.css": "^12.0.1"
  }
}
